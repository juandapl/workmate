{
    "manifest_version": 2,
    "name": "Workmate",
    "version": "1.0",
    "description": "Workmate blocks pages that affect your productivity, and lets you take back control of your time",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "./js/constants/defaultBlockList.js",
            "./background/clearTimers.js",
            "./background/main.js"
        ]
    },
    "permissions": [ "idle", "tabs", "activeTab", "storage" ],
    "content_scripts": [{
        "js": [
            "./js/showAlert.js", 
            "content.js"
        ],
        "matches": ["http://*/*", "https://*/*"]
        
      }],
    "browser_action": {
        "default_icon": "icons/angry_workmate_small.png",
        "default_title": "Workmate",
        "default_popup": "main_popup.html"
    },
    "web_accessible_resources": [
        "icons/*.png",
        "sounds/*.mp3"
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
      }
}